<!DOCTYPE html>
<html>
  <head>
    <title>Strategy List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/strategies/create">Create Strategy</a></h3>
      <h1>Strategy List</h1>
      <% if(strategies.length>0) { %>
      <table class="list-table">
        <thead>
          <tr>
            <th>Username</th>
            <th>Variables</th>
            <th>Currency</th>
            <th>Coin</th>
            <th>Created on</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<strategies.length;i++) { %>
            <tr>
              <td><a href="/strategies/show/<%= strategies[i]._id%>"><%= strategies[i].name%></a></td>
              <td><%= strategies[i].variables%></td>
              <td><%= strategies[i].currency%></td>
              <td><%= strategies[i].coin%></td>
              <td><%= strategies[i].updated_at%></td>

                 
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No strategies found.</div>
      <% } %>
    </div>
  </body>
</html>
